<p id="notice"><%= notice %></p>

<h1>Videos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Duration</th>
      <th>Youtube url</th>
      <th>Reach</th>
      <th>Views</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.title %></td>
        <td><%= Time.at(video.duration).utc.strftime("%H:%M:%S") %></td>
        <td><%= link_to video.youtube_url, video.youtube_url %></td>
        <td><%= video.reach %></td>
        <td><%= video.views %></td>
      </tr>
    <% end %>
  </tbody>
</table>
